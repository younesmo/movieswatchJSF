		<class>com.movieswatch.entities.Person</class>
		<class>com.movieswatch.entities.PersonCharacter</class>
		<class>com.movieswatch.entities.Role</class>
		<class>com.movieswatch.entities.User</class>
		<class>com.movieswatch.entities.Format</class>
